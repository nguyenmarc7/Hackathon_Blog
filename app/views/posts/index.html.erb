





  <!-- Page Header -->
  <header class="masthead" style="background-image: url('startbootstrap-clean-blog-gh-pages/img/home-bg.jpg')">
    <div class="overlay"></div>
    <div class="container">
      <div class="row">
        <div class="col-lg-8 col-md-10 mx-auto">
          <div class="site-heading">
            <h1>Welcome to BlogHub</h1>
            <span class="subheading"></span>
          </div>
        </div>
      </div>
    </div>
  </header>

  <!-- Main Content -->
  <div class="container">
    <div class="row">
      <div class="col-lg-8 col-md-10 mx-auto">
        <section class="section">
            
                <% @posts.each do |post| %>
                    <div class="">
                        <div class="">
                            <div class="media">
                                <div class="media-content">
                            <p class="title is-4"> <%=link_to post.title, post %> </p>
                            </div>
                        </div>
                        <div class="content">
                            <%= post.content %>
                    </div>
                    <div class="comment-count">
                        <span class="tag is-rounded"><%#comment counts%></span>
                </div>
            
            </div>
         <% end %>
         </div>
         </section>
        <!-- Pager -->
        <div class="clearfix">
          <a class="btn btn-primary float-right" href="#">Older Posts &rarr;</a>
        </div>
      </div>
    </div>
  </div>

  <hr>



